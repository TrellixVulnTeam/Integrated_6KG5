<div class="mt-4">
    <h2>Edit</h2>
    <form method="post" action="?_method=PUT">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" value="{{test.name}}" class="form-control" id="name"  name="name"/>
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" value="{{test.description}}" class="form-control" id="description"  name="description"/>
        </div>
        
        <div class="form-group">
            <label for="image">Image</label>
            <textarea class="form-control" id="image" name="image" rows="3"> {{test.image}} </textarea>
        </div>
        
        <button type="submit" class="btn btn-primary">Edit</button>
    </form>
</div>